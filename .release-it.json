{
  "hooks": {
    "before:init": [
      "pnpm format",
      "pnpm lint",
      "pnpm test:staged"
    ]
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  }
}